{
  "name": "myap",
  "version": "0.0.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "nodemon ./dist/bin/www",
    "build": "tsc && npm run copy-sql",
    "dev": "ts-node ./src/bin/www",
    "copy-sql": "cp ./src/database/schema.sql dist\\database",
    "electron": "electron .",
    "build-electron": "electron-builder"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pug": "2.0.0-beta11",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tinymce": "^7.3.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/debug": "^4.1.12",
    "@types/electron": "^1.4.38",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.5",
    "electron": "^32.1.0",
    "electron-builder": "^25.0.5",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "build": {
    "appId": "com.example.myap",
    "files": [
      "dist/**/*",
      "public/**/*",
      "views/**/*",
      "database/*.sql",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  }
}
